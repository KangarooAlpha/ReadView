
<body class="bg-base-200">

  <main class="max-w-5xl mx-auto flex gap-6 items-start">

    <div class="container border-primary flex-row justify-center gap-6">

        <h1 class="text-4xl font-bold mb-6 text-center text-primary text-shadow">Posts</h1>
        <div class=" flex container justify-center pb-10">
            <%= turbo_frame_tag "new_post" do %>
            <div class="contaienr justify-center">
                <%= link_to "Create Post", new_post_path(context: "index"), class: "btn btn-success btn-sm justify-end" %>
            </div>
            <% end %>
        </div>
        <%= turbo_frame_tag "posts_show" do %>
            <div class="grid items-center justify-center gap-6">
                <% if @posts.present? %>
                    <% @posts.each do |post| %>
                    <div class="w-xl text-center justify-center">
                        <%= render partial: "posts/post", locals: { post: post, context: "index" } %>
                    </div>
                    <% end %>
                <% else %>
                    <p>There aren't any posts yet, be the first to make one!</p>
                <% end %>
            </div>
        <% end %>
    </div>

    <section class="mt-12 bg-gray-700 rounded-xl p-6 ">
      <h2 class="text-3xl font-semibold mb-4">Users</h2>
      <div class="space-y-2">
        <% @users.each do |u| %>
          <div>
            <%= link_to user_path(u) do %>
                <%=image_tag u.avatar_url_or_default, class: "h-12 w-12 object-cover rounded-full mr-2"%>
            <% end %>
            <%= link_to "@#{u.username}", user_path(u), class: "link link-hover text-lg text-secondary" %>
          </div>
        <% end %>
      </div>
    </section>

  </main>

</body>