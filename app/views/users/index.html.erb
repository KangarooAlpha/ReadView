<body>
    <% unless user_signed_in?%>
        <%= button_to "Sign up", new_user_registration_path, method: :get %>
        <%= button "Log in", new_user_session_path, method: :get %>
    <% else %>
        <%= button_to "Create Post", new_post_path, method: :get %>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo: false } %>
    <% end %>
    <h1>Posts</h1>
    <% @posts.each do |p| %>
        <div>
            <%= link_to p.title, post_path(p)%>
        </div>
    <% end %>
    <h1>Users</h1>
    <% @users.each do |u| %>
        <div>
            <%= link_to "@#{u.username}", user_path(u)%>
        </div>
    <% end %>
</body>