<%= turbo_frame_tag dom_id(post) do %>
        <% if context == "post" %>
        <div class="container bg-gray-700 p-2 justify-center">
            <div class="container justify-center">
            <h2 class="text-4xl font-bold text-center text-secondary text-shadow"><%= post.title %></h2>
            <h2 class="text-l text-gray-500 text-end hover:underline">By: <%= link_to "@#{post.user.username}", user_path(post.user), data: {turbo: false}%></h2>
            </div>
            <div class="container justify-center grid p-6 gap-6">
            <% post.contents.each do |content| %>
                <% case content.contentable %>
                <% when VideoContent %>
                    <div class=" flex justify-center">
                    <%= video_tag content.contentable.video, controls: true %>
                    </div>
                <% when ImageContent %>
                    <% images = content.contentable.images %>

                    <% if images.size == 1 %>
                        <div class="flex justify-center">
                        <%= image_tag images.first, class: "rounded-lg shadow-lg", loading: "lazy" %>
                        </div>
                    <% elsif images.size > 1 %>
                        <div class="carousel w-full max-w-2xl mx-auto">
                        <% images.each_with_index do |img, index| %>
                            <div id="slide-<%= index %>" class="carousel-item relative w-full">
                            <%= image_tag img, class: "w-full rounded-lg", loading: "lazy" %>
                            <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
                                <% prev_index = (index - 1) % images.size %>
                                <% next_index = (index + 1) % images.size %>
                                <a href="#slide-<%= prev_index %>" class="btn btn-circle">❮</a>
                                <a href="#slide-<%= next_index %>" class="btn btn-circle">❯</a>
                            </div>
                            </div>
                        <% end %>
                        </div>
                    <% end %>
                <% when TextContent %>
                    <p><%= content.contentable.body %></p>
                <% end %>
            <% end %>
            </div>
            <% if post.user == current_user %>
            <div class=" flex justify-end gap-2">
                <%= link_to "Edit", edit_post_path(post: post, context: "post"), class: "btn btn-sm btn-primary z-20"%>
                <%= button_to "Delete", post_path(post), method: :delete, class: "btn btn-sm btn-error",
                 data: { turbo_confirm: "Are you sure you want to delete this post?", turbo: false}%>
            </div>
            <% end %>
        </div>
        <% else %>
        <div class="relative"> 
            <div class="card bg-base-100 shadow-md z-10 relative">
                <div class="card-body">
                <%= link_to post.title, post_path(post), data: { turbo: false }, class: "text-primary no-underline hover:cursor-pointer" %>
                <% post.contents.each do |content| %>
                <% if content.contentable.is_a?(TextContent)%>
                    <p><%= content.contentable.body %></p>
                <% end %>
                <% end %>
                <% if post.user == current_user %>
                    <div class=" card-actions flex gap-2 mt-4">
                    <%= link_to "Edit", edit_post_path(post, context: "index"), class: "btn btn-sm btn-primary z-20" %>
                    <%= button_to "Delete", post_path(post),
                            method: :delete,
                            form: { data: { turbo_confirm: "Are you sure?" }, class: "z-20" },
                            class: "btn btn-sm btn-error" %>
                    </div>
                <% end %>
                </div>
            </div>
        </div>
        <% end %>
<% end %>
