<%- if controller_name != 'sessions' %>
  <div>
  <%= link_to "Log in", new_session_path(resource_name), class:"btn btn-md btn-secondary inline-flex items-center justify-center"%><br />
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div>
  <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-md btn-primary inline-flex items-center justify-center" %><br />
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class:"btn btn-md btn-secondary inline-flex items-center justify-center" %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<% if devise_mapping.omniauthable? %>
  <div class="flex items-center justify-center gap-4 my-4">
    <% resource_class.omniauth_providers.each_with_index do |provider, index| %>
      <% unless index == 0 %>
        <div class="divider divider-horizontal"></div>
      <% end %>
      <%= form_tag omniauth_authorize_path(resource_name, provider),
        method: :post,
        data: { turbo: "false" } do %>
        <% if provider == :google_oauth2 %>
          <%= tag.input type: "image",
            src: asset_path("web_dark_rd_na.svg"),
            alt: "Sign in with Google",
            class: "h-10 w-auto" %>
        <% elsif provider == :github %>
          <%= tag.input type: "image",
            src: asset_path("github-mark.svg"),
            alt: "Sign in with GitHub",
            class: "h-10 w-auto" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
